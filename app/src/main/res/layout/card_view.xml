<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="361dp"
            android:layout_height="120dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="79dp"
                    android:layout_height="76dp" app:srcCompat="@drawable/cocktail3"
                    android:id="@+id/id_cardIcon"
                    android:contentDescription="@string/cDes_barPic"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:layout_width="126dp"
                    android:layout_height="25dp"
                    android:id="@+id/id_locName" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.094"
                    app:layout_constraintStart_toEndOf="@+id/id_cardIcon" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="121dp"
                    android:layout_height="22dp"
                    android:id="@+id/id_happyTime" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_locName"
                    app:layout_constraintStart_toEndOf="@+id/id_cardIcon" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="121dp"
                    android:layout_height="25dp"
                    android:id="@+id/id_address" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_happyTime"
                    app:layout_constraintStart_toEndOf="@+id/id_cardIcon" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>