<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HappyHourInformation">

    <ImageView
            android:layout_width="97dp"
            android:layout_height="89dp" app:srcCompat="@drawable/cocktail3"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="308dp"
            android:layout_height="125dp"
            android:inputType="none"
            android:ems="10"
            android:background="@drawable/textview_border"
            android:padding="5px"
            android:id="@+id/id_barDescription" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.6"/>
    <TextView
            android:layout_width="253dp"
            android:layout_height="37dp"
            android:inputType="none"
            android:ems="10"
            android:background="@drawable/textview_border"
            android:padding="5px"
            android:id="@+id/id_barName"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="67dp"
            android:layout_height="64dp" app:srcCompat="@drawable/google_maps"
            android:id="@+id/id_mapButton"
            android:scaleType="fitCenter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_goBack" android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="67dp"
            android:layout_height="65dp"
            android:id="@+id/id_checkIn"
            android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_barAddress" app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/check_in"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/id_goBack"/>
    <TextView
            android:layout_width="285dp"
            android:layout_height="41dp"
            android:inputType="none"
            android:ems="10"
            android:background="@drawable/textview_border"
            android:padding="5px"
            android:id="@+id/id_barAddress" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_barTimes"
            app:layout_constraintHorizontal_bias="0.504"
    />
    <TextView
            android:layout_width="287dp"
            android:layout_height="43dp"
            android:inputType="none"
            android:ems="10"
            android:background="@drawable/textview_border"
            android:padding="5px"
            android:id="@+id/id_barTimes" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/id_barDescription" app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_goBack" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_barAddress" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="@string/btn_goBack"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>